<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/gridBackground"
    android:orientation="horizontal"
    tools:context="com.app.credentialvault.credvault.activities.CardListParentMainMenuActivity"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/parent_icon_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:contentDescription="@string/fav_card"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/parent_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textColor="@color/blueGray"
            tools:text="Credentials"
            android:textSize="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/parent_text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/toolbar"
            android:textSize="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/parent_icon_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/fav_card" />
    </RelativeLayout>
</LinearLayout >
